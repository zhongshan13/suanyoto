					<div class="hdt-custom-row hdt-flex {% if col_menu == 12 and col_collection == 12 %}hdt-flex-col {% endif %}hdt-justify-center hdt-header-gap-20">
					 	{%- if link.links != blank -%}
				   		
					 		<div class="hdt-menu-col hdt-custom-col-{{ col_menu }} hdt-menu-has-{{ link.links.size | at_most: 6 }}">
								{%- capture content -%}
									{%- assign cols = 1 -%}
									{%- assign is_heading = false -%}
									{%- liquid
										echo '<div class="hdt-mega-item hdt-text-start">'
											echo '<ul class="hdt-mega-menu-list">'
									-%}
					 				{%- for childlink in link.links -%}
										{%- liquid
											if childlink.title contains "[is_heading]" and is_heading
												echo "</ul>"
												echo "</div>"
												echo '<div class="hdt-mega-item hdt-text-start">'
												echo '<ul class="hdt-mega-menu-list">'
												assign is_heading = false
												assign cols = cols | plus: 1
											endif
										-%}
											<li class="hdt-menu-item hdt-flex hdt-justify-center hdt-flex-col">
												<a id="hdt-menu-{{ childlink.handle }}" href="{{ childlink.url }}" class="{% if childlink.title contains "[is_heading]" %}hdt-mega-heading{%- assign is_heading = true -%}{% endif %} hdt-menu-link hdt-flex hdt-align-center hdt-justify-between hdt-relative hdt-text-base hdt-font-normal {%- if childlink.current %} hdt-menu-link--active{% endif %}"{%- if childlink.current %} aria-current="page"{% endif %}>
