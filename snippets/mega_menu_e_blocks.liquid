{%- liquid
	if request.design_mode or search.terms == "submenu" or section.index == null
		assign lazyMn = false
	else
		assign lazyMn = section.settings.lazy_mn
	endif
	assign badge_new = 'general.theme_settings.badge_new' | t | downcase | strip | replace: ' ,', ',' | replace: ', ', ',' | split: ',' | uniq
	assign badge_hot = 'general.theme_settings.badge_hot' | t | downcase | strip | replace: ' ,', ',' | replace: ', ', ',' | split: ',' | uniq
	assign badge_sale = 'general.theme_settings.badge_sale' | t | downcase | strip | replace: ' ,', ',' | replace: ', ', ',' | split: ',' | uniq
-%}

{%- if lazyMn -%}
	{%- case block.type -%}
		{%- when 'mega_shop' -%}
			<hdt-lazy-submenu id="sub-{{ block.id }}" key="{{ key_brand }}" data-section="{{ section.id }}" class="hdt-sub-menu hdt-mega-menu hdt-mega-shop hdt-absolute" color-scheme="{{ block.settings.mega_menu_colors }}"> </hdt-lazy-submenu>
		{%- when 'mega_product' -%}
			<hdt-lazy-submenu id="sub-{{ block.id }}" key="{{ key_brand }}" data-section="{{ section.id }}" class="hdt-sub-menu hdt-mega-menu hdt-mega-product hdt-absolute" color-scheme="{{ block.settings.mega_menu_colors }}"> </hdt-lazy-submenu>
		{%- when 'mega_page' -%}
			<hdt-lazy-submenu id="sub-{{ block.id }}" key="{{ key_brand }}" data-section="{{ section.id }}" class="hdt-sub-menu hdt-mega-menu hdt-mega-page hdt-absolute" color-scheme="{{ block.settings.mega_menu_colors }}"> </hdt-lazy-submenu>
		{%- when 'html' -%}
			<hdt-lazy-submenu id="sub-{{ block.id }}" key="{{ key_brand }}" data-section="{{ section.id }}" class="hdt-sub-menu hdt-mega-menu hdt-mega-html hdt-absolute" color-scheme="{{ block.settings.mega_menu_colors }}"> </hdt-lazy-submenu>
	{%- endcase -%}
{%- else -%}
{%- case block.type -%}
	{%- when 'mega_shop' -%}
		<div id="sub-{{ block.id }}" class="hdt-sub-menu hdt-mega-menu hdt-mega-shop hdt-absolute" color-scheme="{{ block.settings.mega_menu_colors }}">
			{%- if block.settings.collection_list == blank and link.links == blank -%}
				{{ 'sections.header.add_content' | t: item: "shop" }}
			{%- else -%}
				{%- liquid 
					assign link_count = 0
					for link in link.links 
						if link.title contains "[is_heading]" 
							assign link_count = link_count | plus: 1
						endif
					endfor
					assign slide_item = block.settings.collection_list.count | at_most: 4
					assign col_menu = 12
					assign col_collection = 12
					assign space_item = "20px"
					if link.links != blank and block.settings.collection_list != blank
						assign current_width = current_width | divided_by: 2
						assign grid_item = block.settings.col_dk
						if link_count == 1
							assign col_menu = 3
							assign col_collection = 9
							assign slide_item = block.settings.collection_list.count | at_most: 3
						elsif link_count == 2
							assign col_menu = 5
							assign col_collection = 7
							assign slide_item = block.settings.collection_list.count | at_most: 2
						elsif link_count == 3
							assign col_menu = 6
							assign col_collection = 6
							assign slide_item = block.settings.collection_list.count | at_most: 2
						elsif link_count == 4 and block.settings.collection_list.count < 2
							assign col_menu = 9
							assign col_collection = 3
							assign slide_item = block.settings.collection_list.count | at_most: 2
						else
							assign col_menu = 12
							assign col_collection = 12
							assign slide_item = block.settings.collection_list.count | at_most: 4
						endif
						if grid_item == "default"
							assign grid_item = slide_item
						endif
					else
						assign current_width = settings.page_width | append: 'px'
					endif
				-%}
				{%- capture sizes -%}
					calc(({{ current_width }} - ({{ space_item }} * ( {{ block.settings.collection_list.count }} - 1 ))) * 1 / {{ block.settings.collection_list.count }})
				{%- endcapture -%}
