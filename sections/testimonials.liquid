<!-- section/testimonials.liquid -->
{{ 'testimonials.css' | asset_url | stylesheet_tag }}
{{ 'top-head.css' | asset_url | stylesheet_tag }}
{%- style -%}#shopify-section-{{section.id}}{--section-pt:{{section.settings.padding_top}}px;--section-pb:{{section.settings.padding_bottom}}px;--section-prate:{{section.settings.padding_rate}}}#{{section.id}} .hdt-slider__dots{display:flex}@media(min-width:768px){#{{section.id}} .hdt-slider__dots:not(.hdt-show-dot-true){display:none}}{%- endstyle -%}
<div id="{{ section.id }}" class="hdt-section-testimonials hdt-section-spacing hdt-s-gradient hdt-relative" color-scheme="{{ section.settings.color_scheme }}" style="--color-pr-rating:{{ section.settings.pr_rating }}">
  {%- if section.settings.image_bg != blank -%}
    <div class="hdt-testimonial_imagebg hdt-h-full hdt-w-full hdt-full-width-link">
      {{ section.settings.image_bg | image_url: width: section.settings.image_bg.width | image_tag: loading: 'lazy', width: section.settings.image_bg.width, height: section.settings.image_bg.height, class: 'hdt-w-full hdt-h-full hdt-object-cover', sizes: "100vw", widths: "375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840" }}
    </div>
  {%- endif -%}
  <div class="hdt-container{%- if section.settings.section_fullwidth -%} -full{% endif %} hdt-tesimonials-main-content hdt-relative">
    <div class="hdt-testimonials-headings">
      {%- render 'section-top-head' -%}
      <div class="hdt-main-testimonial">
        <hdt-slider  autoheight id="Slider-{{ section.id }}" class="hdt-slider hdt-slider__dots_outline hdt-hidden-slider-nav hdt-hidden-slider-dots hdt-testimonials-{{ section.settings.testimonial_des }} hdt-slide-spacing-15 md:hdt-slide-spacing-30 lg:hdt-slides-{{ section.settings.col_dk }} md:hdt-slides-{{ section.settings.col_tb }} hdt-slides-{{ section.settings.col_mb }} {% if section.settings.navUI %} hdt-nav-btns-{{ section.settings.nav_des }}{% endif %} hdt-relative hdt-nav-{{ section.settings.nav_pos }}" config='{"navUI":{{ section.settings.navUI }}, "dotUI":true,"autoHeight": true }'>
          <div class="hdt-slider__viewport hdt-relative">
						<div class="hdt-slider__container">
							{%- for block in section.blocks -%}
								<div class="hdt-tetimonials-item hdt-slider__slide"hdt-reveal="slide-in" timeline {{ block.shopify_attributes }}>
                  {%- render 'quote_1', block: block -%}
								</div>
							{%- endfor -%}
						</div>
					</div>
					{%- if section.settings.navUI -%}
            <button aria-controls="Slider-{{ section.id }}" class="hdt-slider__button hdt-hidden@mobile hdt-slider-nav hdt-slider-btn_{{ section.settings.nav_des }} hdt-inline-flex hdt-align-center hdt-justify-center hdt-slider__button--prev" type="button" name="previous">
              {%- if section.settings.nav_des != "simple" -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="7" height="11" viewBox="0 0 7 11" fill="none"><path d="M5.5 11L0 5.5L5.5 0L6.47625 0.97625L1.9525 5.5L6.47625 10.0238L5.5 11Z" fill="currentColor"/></svg>
              {%- else -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="19" height="14" viewBox="0 0 19 14" fill="none"><path d="M7.00033 14L8.63366 12.3083L4.49199 8.16667H18.667V5.83333H4.49199L8.63366 1.69167L7.00033 0L0.000326157 7L7.00033 14Z" fill="currentColor"/></svg>
              {%- endif -%}
            </button>
            <button aria-controls="Slider-{{ section.id }}" class="hdt-slider__button hdt-hidden@mobile hdt-slider-nav hdt-slider-btn_{{ section.settings.nav_des }} hdt-inline-flex hdt-align-center hdt-justify-center hdt-slider__button--next" type="button" name="next">
              {%- if section.settings.nav_des != "simple" -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="7" height="11" viewBox="0 0 7 11" fill="none"><path d="M1.5 11L7 5.5L1.5 0L0.52375 0.97625L5.0475 5.5L0.52375 10.0238L1.5 11Z" fill="currentColor"/></svg>
              {%- else -%}
                <svg xmlns="http://www.w3.org/2000/svg" width="19" height="14" viewBox="0 0 19 14" fill="none"><path d="M11.6667 14L10.0333 12.3083L14.175 8.16667H0V5.83333H14.175L10.0333 1.69167L11.6667 0L18.6667 7L11.6667 14Z" fill="currentColor"/></svg>
              {%- endif -%}
            </button>
          {%- endif -%}
            <div hdt-slider-dots aria-controls="Slider-{{ section.id }}" class="hdt-slider__dots hdt-show-dot-{{ section.settings.dotUI }} hdt-flex hdt-align-center hdt-justify-center" hidden style="--dis_dot:{{ section.settings.dis_dot }}px"></div>
        </hdt-slider>
      </div>
    </div>
  </div>
</div>
