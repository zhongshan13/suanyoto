{{ 'hdt-main-article.css' | asset_url | stylesheet_tag }}

{%-liquid
  assign image = article.image
  assign article_id =  article.id
  if comment.status == 'pending'
    assign number_of_comments = article.comments_count | plus: 1
  else
    assign number_of_comments = article.comments_count
  endif
%}
{% comment %} {{ article.user.account_owner | json }}<br>
{{ article.user.bio | json }}<br>
{{ article.user.email | json }}<br>
{{ article.user.first_name | json }}<br>
{{ article.user.homepage | json }}<br>
{{ article.user.image | json }}<br>
{{ article.user.last_name | json }}<br>
{{ article.user.name | json }}<br> {% endcomment %}
<div id="{{ section.id }}"class="hdt-article-inner hdt-s-gradient hdt-section-spacing"color-scheme="{{ section.settings.color_scheme }}">
  <div class="hdt-main-articles hdt-container{%- if section.settings.section_fullwidth -%}-full{% endif %}">
    <div class="hdt-main-article-page">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when "image"- %}
            {%- liquid
              if section.settings.section_fullwidth
                assign page_widthimg = '100vw'
              else
              assign page_widthimg = settings.page_width | append: 'px'
              endif
            -%}
            {%- capture size_1_s -%}
              (min-width:768px) {{ page_widthimg }}, calc({{ page_widthimg}} - 30px )
            {%- endcapture -%}
            {%- if image == blank -%}{%- continue -%}{%- endif -%}
            <div class="hdt-article-image hdt-flex hdt-justify-center" timeline hdt-reveal="slide-in" style="--spacing-bottom:{{ block.settings.margin_bottom }}px">
              <div class="hdt-oh hdt-rounded">
                {{ image | image_url: width: image.width | image_tag: loading: 'lazy', width: image.width, height: image.height, class: 'image-full_width hdt-full-image hdt-object-cover', sizes: size_1_s, widths: '375,450,550,750,800,1100,1500,1780,1920,2000,3000,3840' }}
              </div>
            </div>
          {%- when "article_content" -%}
            <div class="hdt-article-content" timeline hdt-reveal="slide-in" style="--spacing-bottom:{{ block.settings.margin_bottom }}px">
              <article class="hdt-article-{{ article_id }} hdt-rte">{{ article.content }}</article>
            </div>
          {%- when "title" -%}
            <div class="hdt-main-article-heading hdt-article-title hdt-flex hdt-flex-col hdt-align-{{ block.settings.content_align }} hdt-text-{{ block.settings.content_align }}" timeline hdt-reveal="slide-in" style="--spacing-bottom:{{ block.settings.margin_bottom }}px">
              <div class="hdt-article-tags">
                  <div class="hdt-article-category hdt-row-flex">
                    {%- if  block.settings.show_blog_title == 'blog_current' -%}
                      <a class="hdt-btn hdt-oh hdt-btn-outline hdt-font-bold hdt-inline-flex hdt-align-center hdt-justify-center" href="{{ blog.url }}"><span class="hdt-text-xs">{{ blog.title }}</span></a>
                    {%- else -%}
                      {%- assign article_tags = article.tags | join: ';' | split: ';' -%}
                      {%- assign blog_tags = article_tags | where: 'blog_' -%}
                      {%- for tag in blog_tags -%}
                    <a class="hdt-btn hdt-oh hdt-btn-outline hdt-font-bold hdt-inline-flex hdt-align-center hdt-justify-center {{ block.settings.show_blog_title }}" href="{{ blog.url }}/tagged/{{ tag | handle }}"><span class="hdt-text-xs">{{ tag | remove : 'blog_' | strip }}</span></a>
                      {%- endfor -%}
                    {%- endif -%}
                  </div>
              </div>
              {%- if block.settings.show_title == true -%}
                <h1 class="hdt-s-text hdt-{{ block.settings.heading_fs }} hdt-article-heading">{{ article.title }}</h1>
              {%- endif -%}
              {%- if block.settings.show_author or block.settings.show_date -%}
                <div class="hdt-article-metas">
                  {%- if block.settings.show_author == true -%}
                    <div class="hdt-article-author hdt-text-base hdt-inline-block">
                      <span class="hdt-article-by hdt-s-text2">{{ 'blogs.article.by' | t }}</span>
                      <span class="hdt-article-author__name hdt-s-text hdt-font-semibold">{{ article.author | replace_first: 'ad clnt', 'admin' }}</span>
                    </div>
                  {%- endif -%}
                  {%- if block.settings.show_date -%}
                    <div class="hdt-article-time hdt-inline-block hdt-text-base">
                      {%- assign date = block.settings.date -%}<span class="hdt-article-by hdt-s-text2">{{ 'blogs.article.on' | t }}</span>
                      <span class="hdt-article-author__date hdt-s-text hdt-font-semibold">
                        {%- if date contains "%" -%}
                          {{ article.published_at | time_tag: date }}
                        {%- else -%}
                          {{ article.published_at | time_tag: format: date }}
                      {%- endif -%}
                    </span>
                    </div>
                  {%- endif -%}
                </div>
              {%- endif -%}
            </div>
          {%- when "tags_social" -%}
            <div class="hdt-row-grid lg:hdt-grid-cols-2 md:hdt-grid-cols-2 hdt-grid-cols-1 hdt-article-tags-social" style="--spacing-bottom:{{ block.settings.margin_bottom }}px">
              <div class="hdt-article-tags">
                {%- if article.tags.size > 0 -%}
                  <div class="hdt-flex hdt-align-center hdt-justify-start" timeline hdt-reveal="slide-in">
                    {%- assign article_tags = article.tags | join: ';' | split: ';' -%}
                    {%- assign blog_tags = article_tags | where: 'blog_' -%}
                    {%- for tag in blog_tags -%}
                    <a class="hdt-btn hdt-oh hdt-btn-outline hdt-inline-flex hdt-align-center hdt-justify-center hdt-text-base" href="{{ blog.url }}/tagged/{{ tag | handle }}" rel="tag"><span>{{ tag | remove : 'blog_' | strip }}</span></a>
                  {%- endfor -%}
                  </div>
                {%- endif -%}
              </div>
              <div class="hdt-article-social hdt-flex hdt-align-center lg:hdt-justify-end  md:hdt-justify-end hdt-justify-start" timeline hdt-reveal="slide-in">
                {%- liquid
                  assign origin = request.origin
                  assign share = article.url | prepend: origin
                  assign preview_image = article.image | image_url: width: 1024, height: 1024
                  assign share_title = article.title
                -%}
                 {%- if block.settings.enable_social_facebook == true or block.settings.enable_social_twitter == true or block.settings.enable_social_pinterest == true or block.settings.enable_social_tumblr == true or block.settings.enable_social_telegram == true or block.settings.enable_social_whatsapp == true or block.settings.enable_social_email == true -%}
                    <div class="hdt-flex hdt-align-center lg:hdt-justify-end md:hdt-justify-end hdt-justify-start hdt-article-tags-dk">
                      <span class="hdt-article-social_name hdt-font-semibold hdt-s-text">{{ 'blogs.article.share' | t }}:</span>
                      {{ 'hdt-icon-social.css' | asset_url | stylesheet_tag }}
                      <ul class="hdt-socials__list hdt-socials__style-{{ block.settings.socials_style }} hdt-socials__size-{{ block.settings.socials_size }} hdt-inline-block">
                        {%- if block.settings.enable_social_facebook -%}
                          <li class="hdt-socials__item hdt-inline-block">
                            <hdt-tooltip placement="top-end"><a aria-label="{{ 'general.social.shares.share_on_facebook' | t | escape }}" data-no-instant rel="noopener noreferrer nofollow" href="https://www.facebook.com/sharer/sharer.php?u={{ share }}" target="_blank" class="hdt-social-facebook hdt-flex hdt-align-center hdt-justify-center">{%- render 'icon_socials', icon_name: "facebook" -%}</a></hdt-tooltip>
                          </li>
                        {%- endif -%}
                        {%- if block.settings.enable_social_twitter -%}
                          <li class="hdt-socials__item hdt-inline-block">
                            <hdt-tooltip placement="top-end"><a aria-label="{{ 'general.social.shares.share_on_twitter' | t | escape }}" data-no-instant rel="noopener noreferrer nofollow" href="http://twitter.com/share?text={{ share_title }}&amp;url={{ share }}" target="_blank" class="hdt-social-twitter hdt-flex hdt-align-center hdt-justify-center">{%- render 'icon_socials', icon_name: "twitter" -%}</a></hdt-tooltip>
                          </li>
                        {%- endif -%}
                        {%- if block.settings.enable_social_pinterest -%}
                          <li class="hdt-socials__item hdt-inline-block">
                            <hdt-tooltip placement="top-end"><a aria-label="{{ 'general.social.shares.share_on_pinterest' | t | escape }}" data-no-instant rel="noopener noreferrer nofollow" href="http://pinterest.com/pin/create/button/?url={{ share }}&amp;media=http:{{ preview_image }}&amp;description={{ share_title }}" target="_blank" class="hdt-social-pinterest hdt-flex hdt-align-center hdt-justify-center">{%- render 'icon_socials', icon_name: "pinterest" -%}</a></hdt-tooltip>
                          </li>
                        {%- endif -%}
                        {%- if block.settings.enable_social_tumblr -%}
                          <li class="hdt-socials__item hdt-inline-block">
                            <hdt-tooltip placement="top-end"><a aria-label="{{ 'general.social.shares.share_on_tumblr' | t | escape }}" data-no-instant rel="noopener noreferrer nofollow" data-content="http:{{ preview_image }}" href="//tumblr.com/widgets/share/tool?canonicalUrl={{ share }}" target="_blank" class="hdt-social-tumblr hdt-flex hdt-align-center hdt-justify-center">{%- render 'icon_socials', icon_name: "tumblr" -%}</a></hdt-tooltip>
                          </li>
                        {%- endif -%}
                        {%- if block.settings.enable_social_telegram -%}
                          <li class="hdt-socials__item hdt-inline-block">
                            <hdt-tooltip placement="top-end"><a aria-label="{{ 'general.social.shares.share_on_telegram' | t | escape }}" data-no-instant rel="noopener noreferrer nofollow" target="_blank" class="social-telegram hdt-social-telegram hdt-flex hdt-align-center hdt-justify-center" href="https://telegram.me/share/url?url={{ share }}">{%- render 'icon_socials', icon_name: "telegram" -%}</a></hdt-tooltip>
                          </li>
                        {%- endif -%}
                        {%- if block.settings.enable_social_whatsapp -%}
                          <li class="hdt-socials__item hdt-inline-block">
                            <hdt-tooltip placement="top-end"><a aria-label="{{ 'general.social.shares.share_on_whatsapp' | t | escape }}" data-no-instant rel="noopener noreferrer nofollow" target="_blank" class="social-whatsapp hdt-social-whatsapp hdt-flex hdt-align-center hdt-justify-center" href="https://wa.me/?text={{ share_title }}&#x20;{{ share }}">{%- render 'icon_socials', icon_name: "whatsapp" -%}</a></hdt-tooltip>
                          </li>
                        {%- endif -%}
                        {%- if block.settings.enable_social_email -%}
                          <li class="hdt-socials__item hdt-inline-block">
                            <hdt-tooltip placement="top-end"><a aria-label="{{ 'general.social.shares.share_on_email' | t | escape }}" data-no-instant rel="noopener noreferrer nofollow" href="mailto:?subject={{ share_title }}&amp;body={{ share }}" target="_blank" class="hdt-social-email hdt-flex hdt-align-center hdt-justify-center">{%- render 'icon_socials', icon_name: "email" -%}</a></hdt-tooltip>
                          </li>
                        {%- endif -%}
                      </ul>
                    </div>
                    <div class="hdt-article-tags-m">
                      <wrapp-hdt-share-btn class="hdt-contents" hidden>
                        <button class="hdt-share-button hdt-share-button--native hdt-s-text hdt-inline-flex hdt-align-center">
                          <span class="hdt-product__extra-icon">{%- render 'icon' with 'share' -%}</span>
                          <span class="hdt-product__extra-text hdt-font-semibold"> {{ 'general.social.shares.share_btn' | t }}</span>
                        </button>
                      </wrapp-hdt-share-btn>
                      <button class="hdt-share-button hdt-inline-flex hdt-align-center hdt-s-text" aria-controls="Popover-{{ block.id }}" aria-haspopup="dialog" aria-expanded="false">
                        <span class="hdt-product__extra-icon">{%- render 'icon' with 'share' -%}</span>
                        <span class="hdt-product__extra-text hdt-font-semibold">{{ 'general.social.shares.share_btn' | t }}</span>
                      </button>
                      <hdt-popover class="hdt-popover hdt-hidden" id="Popover-{{ block.id }}" placement="top-start" color-scheme="{{ settings.color_scheme_dialog }}" initial-focus="false">
                        <div class="hdt-share-button__header hdt-hidden md:hdt-flex hdt-s-text">
                          <span>{{ 'general.social.shares.share_header' | t | escape }}</span>
                          <wrapp-close-btn class="hdt-contents"><button aria-label="Close"><svg class="hdt-icon hdt-icon-close" role="presentation" fill="none" focusable="false" width="14" height="14" viewBox="0 0 16 16"><path d="M16 1.4L14.6 0L8 6.6L1.4 0L0 1.4L6.6 8L0 14.6L1.4 16L8 9.4L14.6 16L16 14.6L9.4 8L16 1.4Z" fill="currentColor"></path></svg></button></wrapp-close-btn>
                        </div>
                          <ul class="hdt-share-button__links">
                          {%- if block.settings.enable_social_facebook -%}
                            <li class="hdt-socials__item hdt-inline-block">
                              <hdt-tooltip placement="top-end"><a aria-label="{{ 'general.social.shares.share_on_facebook' | t | escape }}" data-no-instant rel="noopener noreferrer nofollow" href="https://www.facebook.com/sharer/sharer.php?u={{ share }}" target="_blank" class="social-facebook hdt-flex hdt-align-center hdt-justify-center">{%- render 'icon_socials' with 'facebook' -%}</a></hdt-tooltip>
                            </li>
                          {%- endif -%}
                          {%- if block.settings.enable_social_twitter -%}
                            <li class="hdt-socials__item hdt-inline-block">
                              <hdt-tooltip placement="top-end"><a aria-label="{{ 'general.social.shares.share_on_twitter' | t | escape }}" data-no-instant rel="noopener noreferrer nofollow" href="http://twitter.com/share?text={{ share_title }}&amp;url={{ share }}" target="_blank" class="social-twitter hdt-flex hdt-align-center hdt-justify-center">{%- render 'icon_socials' with 'twitter' -%}</a></hdt-tooltip>
                            </li>
                          {%- endif -%}
                          {%- if block.settings.enable_social_pinterest -%}
                            <li class="hdt-socials__item hdt-inline-block">
                              <hdt-tooltip placement="top-end"><a aria-label="{{ 'general.social.shares.share_on_pinterest' | t | escape }}" data-no-instant rel="noopener noreferrer nofollow" href="http://pinterest.com/pin/create/button/?url={{ share }}&amp;media=http:{{ preview_image }}&amp;description={{ share_title }}" target="_blank" class="social-pinterest hdt-flex hdt-align-center hdt-justify-center">{%- render 'icon_socials' with 'pinterest' -%}</a></hdt-tooltip>
                            </li>
                          {%- endif -%}
                          {%- if block.settings.enable_social_tumblr -%}
                            <li class="hdt-socials__item hdt-inline-block">
                              <hdt-tooltip placement="top-end"><a aria-label="{{ 'general.social.shares.share_on_tumblr' | t | escape }}" data-no-instant rel="noopener noreferrer nofollow" data-content="http:{{ preview_image }}" href="//tumblr.com/widgets/share/tool?canonicalUrl={{ share }}" target="_blank" class="social-tumblr hdt-flex hdt-align-center hdt-justify-center">{%- render 'icon_socials' with 'tumblr' -%}</a></hdt-tooltip>
                            </li>
                          {%- endif -%}
                          {%- if block.settings.enable_social_telegram -%}
                            <li class="hdt-socials__item hdt-inline-block">
                              <hdt-tooltip placement="top-end"><a aria-label="{{ 'general.social.shares.share_on_telegram' | t | escape }}" data-no-instant rel="noopener noreferrer nofollow" target="_blank" class="social-telegram hdt-social-telegram hdt-flex hdt-align-center hdt-justify-center" href="https://telegram.me/share/url?url={{ share }}">{%- render 'icon_socials' with 'telegram' -%}</a></hdt-tooltip>
                            </li>
                          {%- endif -%}
                          {%- if block.settings.enable_social_whatsapp -%}
                            <li class="hdt-socials__item hdt-inline-block">
                              <hdt-tooltip placement="top-end"><a aria-label="{{ 'general.social.shares.share_on_whatsapp' | t | escape }}" data-no-instant rel="noopener noreferrer nofollow" target="_blank" class="social-whatsapp hdt-social-whatsapp hdt-flex hdt-align-center hdt-justify-center" href="https://wa.me/?text={{ share_title }}&#x20;{{ share }}">{%- render 'icon_socials' with 'whatsapp' -%}</a></hdt-tooltip>
                            </li>
                          {%- endif -%}
                          {%- if block.settings.enable_social_email -%}
                            <li class="hdt-socials__item hdt-inline-block">
                              <hdt-tooltip placement="top-end"><a aria-label="{{ 'general.social.shares.share_on_email' | t | escape }}" data-no-instant rel="noopener noreferrer nofollow" href="mailto:?subject={{ share_title }}&amp;body={{ share }}" target="_blank" class="social-email hdt-flex hdt-align-center hdt-justify-center">{%- render 'icon_socials' with 'email' -%}</a></hdt-tooltip>
                            </li>
                          {%- endif -%}
                        </ul>
                        <div class="hdt-share-button__wrapp">
                          <input id="input-{{ block.id }}" class="hdt-share-button__input hdt-s-text2" type="text" value="{{ share }}" onclick="this.select();" readonly>
                          <wrapp-hdt-copy-btn class="hdt-contents" text-id="input-{{ block.id }}" get-document data-success-message="{{ 'general.social.shares.success_message' | t | escape }}"><button class="hdt-share-button__copy">{{ 'general.social.shares.share_btn_copy' | t }}</button></wrapp-hdt-copy-btn>
                        </div>
                      </hdt-popover>
                    </div>
                  {%- endif -%}
              </div>
            </div>
          {%- when 'comments' -%}{% unless article.comments_enabled? %}{% continue %}{% endunless -%}
            <div class="hdt-article-comments-block" timeline hdt-reveal="slide-in" style="--spacing-bottom:{{ block.settings.margin_bottom }}px">
                {%- if number_of_comments > 0 -%}
                {%- assign anchor_id = '#Comments-' | append: article.id -%}
                <div class="hdt-line-space"></div>
                {%- paginate article.comments by 5 -%}
                    {%- comment -%}
                    #comments is required, it is used as an anchor link by Shopify.
                    {%- endcomment -%}
                    <div id="comments">
                        <h2 id="Comments-{{ article.id }}" class="hdt-comments-heading hdt-h5">{% if number_of_comments == 1 %} {{ 'blogs.comments.with_count.one' | t }} {%- else -%}{{ 'blogs.comments.with_count.other' | t: count: number_of_comments }}{%- endif -%}</h2>
                        <div class="hdt-row-grid hdt-grid-cols-1">
                            {%- if comment.status == 'pending' and comment.content -%}
                                {%- comment -%}
                                If a comment was just submitted with no blank field, show it.
                                {%- endcomment -%}
                                <div id="{{ comment.id }}" class="hdt-comment-item comment hdt-col-item">{%- render 'comment', comment: comment -%}</div>
                            {%- endif -%}
                            {%- for comment in article.comments -%}
                                <div id="{{ comment.id }}" class="hdt-comment-item hdt-col-item">{%- render 'comment', comment: comment -%}</div>
                            {%- endfor -%}
                            {%- if paginate.pages > 1 -%}
                                <div class="hdt-col-12">{%- render 'pagination', paginate: paginate, anchor: anchor_id, ajax: 'false' -%}</div>
                            {%- endif -%}
                        </div>
                    </div>
                {%- endpaginate -%}
                <div class="hdt-line-space"></div>
                {%- endif -%}
                {%- form 'new_comment', article, id: 'CommentForm' -%}
                    <h2 class="hdt-comments-form__heading hdt-h5">{{ 'blogs.comments.title' | t }}</h2>
                    <p class="hdt-comments-form__notes">{{ 'blogs.comments.comments_note_html' | t }}</p>
                    {%- liquid
                        assign post_message  = 'blogs.comments.success'
                        assign blog_moderate = blog.moderated?
                        if blog.moderated? and comment.status == 'pending'
                            assign post_message = 'blogs.comments.success_moderated'
                        elsif comment.status == 'unapproved' or comment.status == 'spam'
                            assign post_message = 'blogs.comments.unapproved'
                        endif
                        assign error_heading = 'blogs.comments.error_heading'
                        assign name          = 'blogs.comments.name'
                        assign email         = 'blogs.comments.email'
                        assign message       = 'blogs.comments.message'
                        assign form_errors   = form.errors
                        assign form_errors_messages = form_errors.messages

                    render 'form-status', form: form, form_id: 'CommentForm', success_message: post_message, form_errors: form_errors, form_errors_messages: form_errors_messages, error_heading: error_heading, name: name, email: email, message: message
                    -%}
                    <div class="hdt-row-grid md:hdt-grid-cols-2 hdt-grid-cols-1 hdt-form-comment">
                        <div class="hdt-col-item hdt-form-group">
                            <label class="hdt-field__label" for="CommentForm-author">{{ name | t }} <span aria-hidden="true">*</span></label>
                            <input type="text" name="comment[author]" id="CommentForm-author" class="hdt-field__input {% if form_errors contains 'author' %}hdt-input--error{% endif %}" autocomplete="name" value="{{ form.author }}" aria-required="true"{% if form_errors contains 'author' %} aria-invalid="true" aria-describedby="CommentForm-author-error"{% endif %} placeholder="">
                            {%- if form_errors contains 'author' -%}<small id="CommentForm-author-error"><span class="hdt-message-error hdt-flex hdt-text-sm">{% render 'icon-error' %}{{ name | t }} <span>{{ form_errors_messages['author'] }}.</span></span></small>{%- endif -%}
                        </div>
                        <div class="hdt-col-item hdt-form-group">
                            <label class="hdt-field__label" for="CommentForm-email">{{ email | t }} <span aria-hidden="true">*</span></label>
                            <input type="email" name="comment[email]" id="CommentForm-email" autocomplete="email" class="hdt-field__input {% if form_errors contains 'email' %} hdt-input--error{% endif %}" value="{{ form.email }}" autocorrect="off" autocapitalize="off" aria-required="true" {% if form_errors contains 'email' %} aria-invalid="true" aria-describedby="CommentForm-email-error"{% endif %} placeholder="">
                            {%- if form_errors contains 'email' -%} <small id="CommentForm-email-error"><span class="hdt-message-error hdt-flex hdt-text-sm">{% render 'icon-error' %}{{ email | t }} {{ form_errors_messages['email'] }}.</span></small>{%- endif -%}
                        </div>
                        <div class="hdt-col-item hdt-form-group hdt-CommentForm">
                            <label class="hdt-form__label hdt-field__label" for="CommentForm-body">{{ message | t }} <span aria-hidden="true">*</span></label>
                            <textarea rows="5" name="comment[body]" id="CommentForm-body" class="text-area hdt-field__input {% if form_errors contains 'body' %} hdt-input--error{% endif %}" aria-required="true" {% if form_errors contains 'body' %} aria-invalid="true" aria-describedby="CommentForm-body-error" {% endif %} placeholder="">{{ form.body }}</textarea>
                            {%- if form_errors contains 'body' -%}<small id="CommentForm-body-error"><span class="hdt-message-error hdt-flex hdt-text-sm">{% render 'icon-error' %}{{ message | t }} {{ form_errors_messages['body'] }}.</span></small>{%- endif -%}
                        </div>
                    </div>
                    {%- if blog_moderate -%}<p class="hdt-article-template__comment-warning">{{ 'blogs.comments.moderated' | t }}</p> {%- endif -%}
                    <button type="submit" class="hdt-btn hdt-cursor-pointer hdt-oh hdt-inline-flex hdt-align-center hdt-justify-center hdt-relative hdt-btn-solid hdt-font-normal hdt-reveal--design-mode">{{ 'blogs.comments.post' | t }}</button>
                {%- endform -%}
            </div>
          {%- when 'navigation' -%}
            {%- if blog.articles_count > 1 -%}
              <div class="hdt-article-navigation hdt-row-grid md:hdt-grid-cols-2 hdt-grid-cols-2"style="--spacing-bottom:{{ block.settings.margin_bottom }}px" >
                <article class="hdt-article-item hdt-article-previous hdt-justify-start hdt-align-center hdt-flex hdt-relative"  timeline hdt-reveal="slide-in">
                  {%- if blog.previous_article -%}
