          "options": [
            {
              "value": "hdt-text-base",
              "label": "t:sections.title.settings.subheading_style.options_1.label"
            },
            {
              "value": "hdt-text-lg",
              "label": "t:sections.title.settings.subheading_style.options_2.label"
